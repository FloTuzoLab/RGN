    //seabedpuddle1.DiffusionBetweenCompartments();
    }
    donutpuddle1.PrintPuddle(false);
    //finitepuddle1.PrintPuddle(false);
    //seabedpuddle1.PrintPuddle(true);
     */
    gsl_rng_free(Random);
}


    


